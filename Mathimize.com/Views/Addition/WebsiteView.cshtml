@model Mathimize.com.Models.BasicArithmeticResultViewModel
@{
    Layout = "~/Views/Shared/_LeftMenuLayout.cshtml";
}
<div>
    <h3>
        @Model.Op</h3>
    @using (Html.BeginForm(@Model.Op, "Addition", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        <div class="container">
            @Html.Partial("_" + Model.Op + "Form", Model)
        </div>
        <button type="submit" class="btn btn-inverse">
            Submit</button>
        <input type="button" class="btn btn-inverse" value="Export to PDF" id="pdf" />
    }
    @{
        if (Model != null && Model.Terms != null)
        {
        
        <h2>@Model.Op</h2>
        
            int i = 0;

            for (int r = 0; r < Model.Rows; r++)
            {
        <div class="row">
            @for (int c = 0; c < Model.Cols; c++)
            {
                <div class="span1 border math_box">
                    @Html.Partial("_" + Model.Op + "Result", Model.Terms[i++])
                </div>
                    
            }
        </div>
            }

        }


    }
</div>
